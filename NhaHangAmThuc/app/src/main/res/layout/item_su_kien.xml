<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="3dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_ten_su_kien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:text="Tên sự kiện"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_ngay_su_kien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:text="Ngày tháng"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_view_mon_tang_kem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:text="Món tặng kèm"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/image_button_sua_su_kien"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="3dp"
        android:layout_weight="1"
        android:contentDescription="Sửa thông tin sự kiện"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_edit" />

    <ImageButton
        android:id="@+id/image_button_xoa_su_kien"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="3dp"
        android:layout_weight="1"
        android:contentDescription="Xóa sự kiện"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_delete" />

</LinearLayout>