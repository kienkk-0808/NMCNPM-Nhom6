<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:layout_marginHorizontal="3dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/text_view_ten"
            android:textStyle="bold"
            android:layout_marginVertical="3dp"
            android:text="This is a member"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginVertical="3dp"
            android:id="@+id/text_view_so_dien_thoai"
            android:textStyle="bold"
            android:text="This is phone number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginVertical="3dp"
            android:id="@+id/text_view_hang"
            android:textStyle="bold"
            android:text="This is rank"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginVertical="3dp"
            android:id="@+id/text_view_diem_tich_luy"
            android:textStyle="bold"
            android:text="This is point"/>

    </LinearLayout>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        android:id="@+id/image_button_sua"
        android:layout_weight="1"
        android:layout_marginHorizontal="3dp"
        android:contentDescription="Sửa thông tin hội viên" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:layout_marginHorizontal="3dp"
        android:id="@+id/image_button_xoa"
        android:layout_weight="1"
        android:contentDescription="Xóa hội viên" />


</LinearLayout>