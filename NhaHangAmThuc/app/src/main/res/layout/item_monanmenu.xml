<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="195dp"
    android:layout_marginLeft="16dp"
    android:background="@drawable/recycler_bg">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/menu_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/menu_name"
        android:layout_width="149dp"
        android:layout_height="38dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/open_sans_bold"
        android:lines="2"
        android:text="Sườn xào chua ngọt thật hấp dẫn"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_image" />

    <TextView
        android:id="@+id/menu_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Khai vị"
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/menu_name"
        app:layout_constraintTop_toBottomOf="@+id/menu_name" />

    <TextView
        android:id="@+id/menu_gia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/menu_type"
        app:layout_constraintTop_toBottomOf="@+id/menu_type" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="VNĐ"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/menu_gia"
        app:layout_constraintStart_toEndOf="@+id/menu_gia" />

    <ImageButton
        android:id="@+id/deleteBtn"
        android:layout_width="44dp"
        android:layout_height="43dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_delete"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>